extends ../layout/index

block content
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center 
            | Bienes 
            span.font-normal Raices

        h2.text-center.text-2xl.font-extrabold= page

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/register")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.font-bold(for="username") Tu nombre
                        input#username.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400(
                            type="text" name="username" placeholder="Tu nombre" value= user ? user.username : ''
                        ).mt-5
                        
                    div 
                        label.block.text-sm.uppercase.text-gray-500.font-bold(for="email") Email de registro
                        input#email.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400(
                            type="text" name="email" placeholder="Email" value= user ? user.email : ''
                        ).mt-5
                        
                    div 
                        label.block.text-sm.uppercase.text-gray-500.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400(
                            type="password" name="password" placeholder="Introduce una contraseña"
                        ).mt-5
                        
                    div
                        label.block.text-sm.uppercase.text-gray-500.font-bold(for="confirm_password") Confirmar Contraseña
                        input#confirm_password.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400(
                            type="password" name="confirm_password" placeholder="Confirma tu contraseña"
                        ).mt-5
                        
                    .flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href="login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="reset_password") Olvidé mi contraseña
                        
                    input(
                        class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer"
                        type="submit" value="Crear Cuenta"
                    )